{
  "method": "PUT",
  "header": [
    {
      "key": "Authorization",
      "value": "Bearer {{BUYER_TOKEN}}"
    },
    {
      "key": "Origin",
      "value": "{{BUYER_HOST}}"
    },
    {
      "key": "Content-Type",
      "value": "application/json"
    }
  ],
  "body": {
    "email": {
      "subject": "{{email.subject}}",
      "body": "{{email.body}}"
    },
    "scheduleUrl": "{{email.scheduleUrl}}"
  },
  "url": {
    "raw": "{{API_HOST}}/buyer/v1/vendors/{{VENDOR_ID}}/actions/ApproveVendor",
    "host": [
      "{{API_HOST}}"
    ],
    "path": [
      "buyer",
      "v1",
      "vendors",
      "{{VENDOR_ID}}",
      "actions",
      "ApproveVendor"
    ]
  }
}