{
  "method": "POST",
  "header": [
    {
      "key": "Authorization",
      "value": "Bearer {{BUYER_TOKEN}}"
    },
    {
      "key": "Content-Type",
      "value": "application/json"
    }
  ],
  "body": {
    "name": "{{location.name}}",
    "address": "{{location.address}}",
    "city": "{{location.city}}",
    "state": "{{location.state}}",
    "zip": "{{location.zip}}"
  },
  "url": {
    "raw": "{{API_HOST}}/buyer/v1/locations",
    "host": [
      "{{API_HOST}}"
    ],
    "path": [
      "buyer",
      "v1",
      "locations"
    ]
  }
}