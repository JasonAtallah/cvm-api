{
  "$id": "http://cannabisvendormgmt.com/schemas/new-vendor.json",
  "type": "object",
  "properties": {
    "company": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "city": {
          "type": "string",
          "minLength": 1
        },
        "email": {
          "type": "string",
          "pattern": "(?:[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*|\"(?:[\\x01-\\x08\\x0b\\x0c\\x0e-\\x1f\\x21\\x23-\\x5b\\x5d-\\x7f]|\\\\[\\x01-\\x09\\x0b\\x0c\\x0e-\\x7f])*\")@(?:(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?|\\[(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?|[a-z0-9-]*[a-z0-9]:(?:[\\x01-\\x08\\x0b\\x0c\\x0e-\\x1f\\x21-\\x5a\\x53-\\x7f]|\\\\[\\x01-\\x09\\x0b\\x0c\\x0e-\\x7f])+)\\])"
        }
      },
      "required": ["name", "city", "email"]
    },
    "flowers": {
      "type": "object",
      "properties": {
        "products": {
          "type": "array"
        }
      }
    },
    "edibles": {
      "type": "object",
      "properties": {
        "products": {
          "type": "array"
        }
      }
    },
    "concentrates": {
      "type": "object",
      "properties": {
        "products": {
          "type": "array"
        }
      }
    }
  },
  "required": ["company", "flowers", "edibles", "concentrates"]
}
