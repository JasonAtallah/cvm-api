{
  "$id": "http://cannabisvendormgmt.com/schemas/location.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "state": {
      "type": "string",
      "minLength": 2,
      "maxLength": 2
    },
    "zip": {
      "type": "string",
      "pattern": "^\\d{5}(?:[-\\s]\\d{4})?$"
    }
  },
  "required": ["name", "address", "city", "state", "zip"]
}
