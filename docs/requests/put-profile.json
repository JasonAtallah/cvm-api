{
  "method": "PUT",
  "header": [
    {
      "key": "Authorization",
      "value": "Bearer {{BUYER_TOKEN}}"
    },
    {
      "key": "Content-Type",
      "value": "application/json"
    }
  ],
  "body": {
    "company": {
      "name": "{{profile.company.name}}",
      "city": "{{profile.company.city}}"
    },
    "contact": {
      "firstName": "{{profile.contact.firstName}}",
      "email": "{{profile.contact.email}}"
    }
  },
  "url": {
    "raw": "{{API_HOST}}/buyer/v1/profile",
    "host": [
      "{{API_HOST}}"
    ],
    "path": [
      "buyer",
      "v1",
      "profile"
    ]
  }
}