{
  "method": "POST",
  "header": [
    {
      "key": "Content-Type",
      "value": "application/json"
    },
    {
      "key": "Authorization",
      "value": "Bearer {{BUYER_TOKEN}}"
    }
  ],
  "body": {
    "name": "{{event.name}}",
    "location": "{{event.location}}",
    "date": "{{event.date}}",
    "time": "{{event.time}}",
    "duration": "{{event.duration}}",
    "timezone": "{{event.timezone}}"
  },
  "url": {
    "raw": "{{API_HOST}}/buyer/v1/events",
    "host": [
      "{{API_HOST}}"
    ],
    "path": [
      "buyer",
      "v1",
      "events"
    ]
  }
}
